{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Вход в личный кабинет</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-left">
                {% if errors | length %}
                    {% for error in errors %}
                        <div class="alert alert-danger">{{ error }}</div>
                    {% endfor %}
                {% endif %}
                <form action="/login" method="post" novalidate>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Логин <span class="required">*</span></label>
                            <input type="text" class="form-control" name="login" value="{{ login }}">
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Пароль <span class="required">*</span></label>
                            <input type="password" class="form-control" name="password" value="{{ password }}">
                        </div>
                    </div>
                    <div id="success"></div>

                    <input type="submit" name="enter" class="btn btn-primary" value="Войти">
                </form>
            </div>
        </div>
    </div>
{% endblock %}